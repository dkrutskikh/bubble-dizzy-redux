{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "release-binary-dir",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}"
        },
        {
            "name": "base-release",
            "inherits": "release-binary-dir",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-ninja-release",
            "displayName": "Linux Ninja release",
            "description": "Bubble Dizzy Redux Linux Ninja",
            "inherits": "base-release"
        },
        {
            "name": "macos-ninja-release",
            "displayName": "macOS Ninja release",
            "description": "Bubble Dizzy Redux MacOS Ninja",
            "inherits": "base-release"
        },
        {
            "name": "macos-xcode",
            "displayName": "macOS XCode",
            "description": "Bubble Dizzy Redux MacOS XCode",
