{
    "version": 10,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 31,
        "patch": 6
    },
    "configurePresets": [
        {
            "name": "release-binary-dir",
            "hidden": true,
            "binaryDir": "${sourceDir}/out/build/${presetName}"
        },
        {
            "name": "base-release",
            "inherits": "release-binary-dir",
            "hidden": true,
            "generator": "Ninja",
            "cacheVariables": {
                "CMAKE_INSTALL_PREFIX": "${sourceDir}/out/install/${presetName}",
                "PACKAGE_FILE_NAME": "$env{BUILD_FILE_NAME}",
                "PACKAGE_NAME_SUFFIX": "$env{BUILD_NAME_SUFFIX}",
                "CMAKE_BUILD_TYPE": "RelWithDebInfo",
                "ENABLE_TEST": "OFF",
                "ENABLE_PUBLIC_RELEASE": "$env{ENABLE_PUBLIC_RELEASE}",
                "ENABLE_PCH": "OFF"
            }
        },
        {
            "name": "macos-ninja-release",
            "displayName": "macOS Ninja release",
            "description": "Bubble Dizzy Redux MacOS Ninja",
            "inherits": "base-release"
        },
        {
            "name": "macos-xcode-release",
            "displayName": "macOS XCode release",
            "description": "Bubble Dizzy Redux MacOS XCode",
            "inherits": "base-release",
            "generator": "Xcode"
        },
        {
            "name": "macos-ninja-debug",
            "displayName": "macOS Ninja debug",
            "description": "Bubble Dizzy Redux MacOS Ninja (Debug)",
            "inherits": "macos-ninja-release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-msvc-release",
            "displayName": "Windows x64 release",
            "description": "Bubble Dizzy Redux Windows MSVC",
            "inherits": "base-release",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            }
        },
        {
            "name": "windows-msvc-release-x86",
            "displayName": "Windows x86 release",
            "description": "Bubble Dizzy Redux Windows MSVC x86",
            "inherits": "base-release",
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "Win32",
                "strategy": "set"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default-debug",
            "hidden": true,
            "configuration": "Debug"
        },
        {
            "name": "default-release",
            "hidden": true,
            "configuration": "RelWithDebInfo"
        },
        {
            "name": "macos-ninja-release",
            "configurePreset": "macos-ninja-release",
            "inherits": "default-release"
        },
        {
            "name": "macos-xcode-release",
            "configurePreset": "macos-xcode-release",
            "inherits": "default-release"
        },
        {
            "name": "windows-msvc-release",
            "configurePreset": "windows-msvc-release",
            "inherits": "default-release"
        },
        {
            "name": "windows-msvc-release-x86",
            "configurePreset": "windows-msvc-release-x86",
            "inherits": "default-release"
        },
        {
            "name": "macos-ninja-debug",
            "configurePreset": "macos-ninja-debug",
            "inherits": "default-debug"
        }
    ]
}
